<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:padding="5dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:layout_margin="2dp"
            android:id="@+id/imgSongLike"
            android:layout_width="80dp"
            android:layout_height="80dp">
        </ImageView>

        <TextView
            android:layout_margin="5dp"
            android:maxWidth="350dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="congdeptrai"
            android:layout_toRightOf="@id/imgSongLike"
            android:textColor="#29E309"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/txtNameSongLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:textStyle="italic"
            android:textColor="#4CAF50"
            android:textSize="17sp"
            android:text="congdeptrai"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/imgSongLike"
            android:layout_below="@id/txtNameSongLike"
            android:id="@+id/txtNameSingerLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/imgLike"
            android:src="@drawable/iconlove"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp"></ImageView>

    </RelativeLayout>

</LinearLayout>