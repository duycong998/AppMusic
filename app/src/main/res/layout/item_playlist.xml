<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/imgBGPlaylist"
        android:scaleType="fitXY"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="160dp"/>

    <View
        android:layout_margin="2dp"
        android:background="@drawable/custom_background_banner"
        android:layout_width="match_parent"
        android:layout_height="160dp">
    </View>

    <ImageView
        android:id="@+id/imgViewPlaylist"
        android:scaleType="fitXY"
        android:layout_margin="12dp"
        android:layout_alignBottom="@+id/imgBGPlaylist"
        android:elevation="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:text="Cong dep trai"
        android:textSize="15sp"
        android:layout_alignBottom="@id/imgViewPlaylist"
        android:layout_toRightOf="@id/imgViewPlaylist"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:id="@+id/txtPlaylist"
        android:maxLines="1"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

</RelativeLayout>