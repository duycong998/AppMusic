<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">
    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/iconloved"
        android:id="@+id/imgSearchBH"
        android:layout_width="70dp"
        android:layout_height="70dp"/>

    <TextView
        android:textColor="#F02"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginLeft="5dp"
        android:text="cong dep trai"
        android:layout_toRightOf="@id/imgSearchBH"
        android:layout_marginRight="40dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:id="@+id/txtNameSongSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#00BCD4"
        android:textStyle="italic"
        android:textSize="17sp"
        android:layout_marginLeft="5dp"
        android:text="cong dep trai"
        android:layout_below="@id/txtNameSongSearch"
        android:layout_toRightOf="@id/imgSearchBH"
        android:layout_marginRight="40dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:id="@+id/txtNameSingerBHSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/iconlove"
        android:id="@+id/imgIconLoveSearch"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</RelativeLayout>