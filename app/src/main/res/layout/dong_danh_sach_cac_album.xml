<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
            android:scaleType="fitXY"
            android:id="@+id/imgDSCacAlbumall"
            android:src="@drawable/iconloved"
            android:layout_width="250dp"
            android:layout_height="150dp"/>

    <TextView
        android:id="@+id/txtTenDSCacAlbumall"
        android:gravity="left"
        android:maxWidth="200dp"
        android:lines="2"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Tên Danh Sách PlayList nè a b"
        android:textStyle="bold"
        android:textColor="#0040FF"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtTenDSCaSiAlbumall"
        android:layout_gravity="left"
        android:maxWidth="200dp"
        android:ellipsize="end"
        android:text="Various Artists"
        android:textStyle="bold"
        android:textColor="#E4081A"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>